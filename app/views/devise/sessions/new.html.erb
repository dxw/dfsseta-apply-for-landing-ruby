

<div class="govuk-grid-row">
<div class='govuk-grid-column-two-thirds govuk-!-margin-top-3 govuk-!-margin-bottom-3'>
<h1 class="govuk-heading-l">Sign in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.govuk_email_field :email, label: {text: 'Email'}, width: 'one-half' %>
  <%= f.govuk_password_field :password, label: {text: 'Password'}, width: 'one-half' %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: 'govuk-button' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
